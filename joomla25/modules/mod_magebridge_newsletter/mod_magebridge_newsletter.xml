<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_MAGEBRIDGE_NEWSLETTER</name>
	<author>Yireo</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2012 Yireo.com. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>development@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.7.4276</version>
	<description>MOD_MAGEBRIDGE_NEWSLETTER_DESC</description>

	<files>
		<filename module="mod_magebridge_newsletter">mod_magebridge_newsletter.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_magebridge_newsletter.ini</language>
        <language tag="en-GB">en-GB.mod_magebridge_newsletter.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
		        <field name="layout" type="list" default="default" label="MOD_MAGEBRIDGE_NEWSLETTER_LAYOUT" description="MOD_MAGEBRIDGE_NEWSLETTER_LAYOUT_DESC">
        			<option value="default">MOD_MAGEBRIDGE_NEWSLETTER_LAYOUT_OPTION_DEFAULT</option>
		        	<option value="simple">MOD_MAGEBRIDGE_NEWSLETTER_LAYOUT_OPTION_SIMPLE</option>
        			<option value="raw">MOD_MAGEBRIDGE_NEWSLETTER_LAYOUT_OPTION_RAW</option>
		        </field>
        		<field name="load_css" type="list" default="1" label="MOD_MAGEBRIDGE_LOAD_CSS" description="MOD_MAGEBRIDGE_LOAD_CSS_DESC">
		        	<option value="0">JNO</option>
        			<option value="1">JYES</option>
		        </field>
        		<field name="load_js" type="list" default="1" label="MOD_MAGEBRIDGE_LOAD_JS" description="MOD_MAGEBRIDGE_LOAD_JS_DESC">
		        	<option value="0">JNO</option>
        			<option value="1">JYES</option>
		        </field>
           	</fieldset>
			<fieldset name="advanced">
        		<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        		<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		        </field>
        		<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        	</fieldset>
        </fields>
	</config>
</extension>
